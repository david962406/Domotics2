<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiuady.android.domotics.db.sensors.DoorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puerta Principal"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/opendoor1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"


            android:background="@drawable/open" />

        <ImageButton
            android:id="@+id/closedoor1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentTop="true"

            android:background="@drawable/close" />
    </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txt_doorpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puerta Secundaria"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/open"
        android:id="@+id/opendoor2"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="33dp"

        android:layout_centerVertical="true"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/close"
        android:id="@+id/closedoor2"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="215dp"
        android:layout_alignTop="@+id/opendoor2"
         />
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
