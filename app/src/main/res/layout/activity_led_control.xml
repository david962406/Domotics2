<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiuady.android.domotics.db.sensors.ledControl">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Control"
        android:id="@+id/textView2"
        style="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <SeekBar
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="255"
        android:progress="0"
        android:indeterminate="false"
        android:layout_alignTop="@+id/sw_led1"
        android:layout_alignStart="@+id/seekBar2" />
    <SeekBar
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:max="255"
        android:progress="1"
        android:indeterminate="false"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />
    <Switch
        android:id="@+id/sw_led2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/sw_led3" />
    <Switch
        android:id="@+id/sw_led4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/sw_led3" />
    <Switch
        android:id="@+id/sw_led3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toStartOf="@+id/seekBar2"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="11dp" />
    <Switch
        android:id="@+id/sw_led1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/sw_led3"
        android:layout_marginTop="11dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/sw_led3"
        android:layout_alignStart="@+id/seekBar2" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/sw_led4"
        android:layout_alignStart="@+id/button7" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button4"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lamp_11"
        android:id="@+id/button5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lumn"
        android:layout_alignTop="@+id/textView3"

        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/seekBar" />
</RelativeLayout>
